<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.watchingTVmobile.watchingTV">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:label="@string/app_name">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FilmDetailsActivity"
            android:label="@string/title_activity_film_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.DetailScreen" />
        <activity
            android:name=".activities.TousFilmsActivity"
            android:label="@string/title_activity_tous_films"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TousSeriesActivity"
            android:label="@string/title_activity_view_tous_series"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SerieDetailsActivity"
            android:label="@string/title_activity_serie_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.DetailScreen" />
        <activity
            android:name=".activities.RechercheActivity"
            android:label="@string/title_activity_recherche"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>